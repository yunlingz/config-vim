{
  "diagnostic.errorSign": "❯",
  "diagnostic.warningSign": "❯",
  "diagnostic.infoSign": "❯",
  "diagnostic.hintSign": "❯",
  // --
  // "diagnostic.virtualText": true,
  // "diagnostic.virtualTextCurrentLineOnly": false,
  // "diagnostic.virtualTextPrefix": "  ",
  // --
  "coc.preferences.jumpCommand": "view",
  "coc.source.file.ignoreHidden": false,
  "signature.preferShownAbove": false,
  // --
  // "python.formatting.provider": "black",
  // "python.formatting.blackPath": "/usr/local/bin/black",
  // "python.formatting.blackArgs": ["-l", "80"],
  // --
  "languageserver": {
    "rust-lsp": {
      "command": "/Users/ling/opt/rust-analyzer",
      "rootPatterns": ["Cargo.toml"],
      "filetypes": ["rust"],
      "initializationOptions": {
        "cargo": {
          "loadOutDirsFromCheck": true
        },
        "procMacro": {
          "enable": true
        }
      }
    },
    "clangd": {
      "command": "/usr/local/opt/llvm/bin/clangd",
      "args": ["--clang-tidy", "--fallback-style=google"],
      "rootPatterns": ["compile_commands.json", "compile_flags.txt"],
      "filetypes": ["cpp", "c"],
      "initializationOptions": {
        "fallbackFlags": [
          "-xc++",
          "-std=c++17",
          "-pedantic",
          "-Wall",
          "-Wextra",
          "-fno-exceptions",
          "-fno-rtti",
          "-pthread",
          // -- custom --
          "-I/usr/local/include",
          "-I/usr/local/Cellar/fmt/7.1.3/include"
        ]
      }
    },
    "pyright": {
      "command": "/Users/ling/opt/npm/bin/pyright-langserver",
      "args": ["--stdio"],
      "rootPatterns": [
        "setup.py",
        "pyproject.toml",
        "setup.cfg",
        "requirements.txt"
      ],
      "filetypes": ["python"],
      "settings": {
        "python": {
          "analysis": {
            "autoSearchPaths": true,
            "useLibraryCodeForTypes": true,
            "diagnosticMode": "workspace"
          }
        }
      }
    }
    // "deno-lsp": {
    //   "command": "/usr/local/bin/deno",
    //   "args": ["lsp"],
    //   "rootPatterns": ["deps.ts", "dev_deps.ts", "tsconfig.json"],
    //   "filetypes": [
    //     "typescript",
    //     "typescriptreact",
    //     "javascript",
    //     "javascriptreact"
    //   ],
    //   "initializationOptions": {
    //     "enable": true,
    //     "lint": true,
    //     "unstable": false
    //   }
    // }
  }
}
