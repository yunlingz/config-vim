root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{rs,py}]
indent_size = 4

[{Makefile,.gitconfig}]
indent_style = tab
indent_size = tab
tab_width = 8

[*.{go}]
indent_style = tab
indent_size = tab
tab_width = 2
